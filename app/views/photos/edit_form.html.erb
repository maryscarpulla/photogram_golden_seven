<h1>Edit Photo <%= @my_photo.id %> </h1>

<form action = "/photos/update_photo/<%= @my_photo.id %>">
  <div>
    <label for="Caption">The caption</label>
    <input id = "Caption" type ="text" name = "da_caption" value = "<%= @my_photo.caption%>">
  </div>
  <div>
    <label for ="Source">The source </label>
    <input id = "Source" type ="text" name = "da_source" value = "<%= @my_photo.source%>">
  </div>
  <div><button>Update Photo</button> </div>

</form>
